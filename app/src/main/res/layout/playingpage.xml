<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".playingPage">


    <com.example.thechainreaction.Grid
        android:id="@+id/Grid"
        android:layout_width="621dp"
        android:layout_height="682dp"
        custom:black="#E3E6E6"
        custom:gridBlue="#2039F0"
        custom:gridGreen="#21EB1E"
        custom:gridPink="#EB1EBC "
        custom:gridPurple="#FF5F15"
        custom:gridPurple2="@color/purple_200"
        custom:gridRed="#b31e26"
        custom:gridSblue="#40e0d0"
        custom:gridWhite="@color/white"
        custom:gridYellow="#E4EF07"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintVertical_bias="0.569">

    </com.example.thechainreaction.Grid>

    <Button
        android:id="@+id/btnResta"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:background="@drawable/restartgamebtn"
        android:onClick="restartButton"
        android:text="restart"
        android:textColor="@color/white"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/Grid" />

    <TextView
        android:id="@+id/textUpdate"
        android:layout_width="249dp"
        android:layout_height="38dp"
        android:text="Game in Progress"
        android:textAlignment="center"
        android:textColor="#E6DFDF"
        android:textSize="27sp"
        android:textStyle="bold"
        custom:layout_constraintBottom_toTopOf="@+id/Grid"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintHorizontal_bias="0.561"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintVertical_bias="0.466" />

</androidx.constraintlayout.widget.ConstraintLayout>